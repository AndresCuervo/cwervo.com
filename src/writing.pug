---
title: Writing
layout: layouts/base.pug
---

h2 #{title}
for post in collections.writing
    if !post.data.draft
        - let date = new Date(post.data.date.toString())
        - let month = date.toLocaleString('en-US', { month: "long" })
        - let dateString = `${month} ${date.getDay()}, ${date.getFullYear()}`
        li
            a(href=post.url) #{post.data.title}
            span  (#{dateString})

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title #{title || "cwervo.com"}
        link(rel="stylesheet" href="/main.css")
        - if (specialIncludes)
            - if (typeof specialIncludes === "object")
                for thing in specialIncludes
                    script(src=thing)
            - else
                script(src=specialIncludes)

        - if (aframeStyle)
            style
                | a-scene {
                | height: 300px;
                |  width: 50%;
                | }
        - if (gridStyle)
            style.
                .grid {
                    display: grid;
                    grid-template-columns: auto;
                    grid-template-rows: 5% auto;
                }

                .grid > * {
                    padding: 10%;
                }

                .grid .title {
                font-size: 2em;
                font-weight: bold;
                text-transform: capitalize;
                }

                @media (min-width: 600px) {
                    .grid {
                        grid-template-columns: 50% 50%;
                    }
                }

                @media (min-width: 900px) {
                    .grid {
                        grid-template-columns: 33% 33% 33%;
                    }
                }
        style.
            nav > ul > li:not(:last-child) {
                float: left;
                margin-right: 1em;
            }
            a {
                color: #0074D9;
            }
            a:visited {
                color: #B10DC9;
            }

    // Colors from: http://clrs.cc/a11y/
    body(style="font-family: sans-serif; font-size: 1.25rem; padding: 0 10%; background-color: #111; color: #2EAFAC;")
        nav(style="display: block; width: 100%;")
            ul(style="list-style-type: none;")
                li
                    a(href="/") Home
                li
                    a(href="/writing") Writing
                li
                    a(href="/speaking") Speaking
                li
                    a(href="/work") Work
                li
                    a(href="/about") About
        |!{content}

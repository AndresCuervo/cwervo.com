doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title #{title ? title+" - " : ""} cwervo.com
        link(rel="stylesheet" href="/main.css")
        link(rel="icon" type="image/png" href="/assets/images/favicon.png")
        if noIndex
            meta(name="robots" content="noindex, nofollow")
        - if (specialIncludes)
            - if (typeof specialIncludes === "object")
                for thing in specialIncludes
                    script(src=thing)
            - else
                script(src=specialIncludes)

        - if (aframeStyle)
            style
                | a-scene {
                | height: 300px;
                |  width: 50%;
                | }
        - if (gridStyle)
            style.
                .grid {
                    display: grid;
                    grid-template-columns: auto;
                    grid-template-rows: 5% auto;
                }

                .grid > * {
                    padding: 10%;
                }

                .grid .title {
                font-size: 2em;
                font-weight: bold;
                text-transform: capitalize;
                }

                @media (min-width: 600px) {
                    .grid {
                        grid-template-columns: 50% 50%;
                    }
                }

                @media (min-width: 900px) {
                    .grid {
                        grid-template-columns: 33% 33% 33%;
                    }
                }
        style.
            nav > ul > li:not(:last-child) {
                float: left;
                margin-right: 1em;
            }
            a {
                color: #0074D9;
                text-decoration-color: #2EAFAC;
            }
            a:visited {
                color: #B10DC9;
            }

    // Colors from: http://clrs.cc/a11y/
    // body(style="font-family: sans-serif; font-size: 1.25rem; padding: 0 10%; background-color: #111; color: #2EAFAC;")
    // body(style="font-family: sans-serif; font-size: 1.25rem; padding: 0 10%; color: #111; background-color: #2EAFAC;")
    body(style="font-family: sans-serif; padding: 0 1%; color: #234; background-color: #F8F8F8;")
        nav(style="display: block; width: 100%; font-size: 2rem;")
            ul(style="list-style-type: none; padding-left: 0;")
                li
                    a(href="/")
                        img(style="display: inline-block; height: 1.5em; width: auto;" src="/assets/images/favicon.png" alt="small-logo")
                li
                    a(href="/") Home
                li
                    a(href="/writing") Writing
                li
                    a(href="/speaking") Speaking
                // li
                //     a(href="/projects") Projects
                li
                    a(href="/portfolio") Portfolio
                li
                    a(href="https://twitter.com/acwervo" target="_blank") Twitter
                li
                    a(href="/about") About
        |!{content}

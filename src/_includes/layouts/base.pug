doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title #{title ? title+" - " : ""} cwervo.com
        link(rel="stylesheet" href="/main.css")
        link(rel="icon" type="image/png" href="/assets/images/favicon.png")
        // meta(name="viewport" content="width=device-width")
        meta(name="viewport" content="initial-scale=1.0")
        if (padding)
            style body {padding: 0 5%;} @media (min-width: 600px) { body {padding: 0 15%;} } @media (min-width: 900px) { body {padding: 0 30%;} }
        else
            style body {padding: 0 3%;}

        if noIndex
            meta(name="robots" content="noindex, nofollow")
        style.
            body { font-size: 1rem; }

            nav > ul > li:not(:last-child) {
                margin-right: 1em;
            }

            a {
                color: #0074D9;
                text-decoration-color: #2EAFAC;
            }
            a:visited {
                color: #B10DC9;
            }
            nav a {
                color: black;
            }
            nav a:visited {
                color: #333;
            }

            nav > ul > li:not(:last-child) {
                    float: left;
            }

            .navItem {
                margin-right: 10px;
            }

            @media (max-width: 450px) {
                nav li:nth-of-type(2n + 1):not(:last-child) {
                    float: left;
                    width: 50%;
                }
                .navItem {
                    font-size: 1.75rem;
                }
                nav {
                    width: 100%;
                    display: block;
                }
            }

            .caption {
                width: 100%;
                text-align: center;
                color: #444;
                margin-bottom: 15px;
            }
            .caption::before {
                content: 'â†³';
                display: inline-block;
                margin-right: 1em;
            }

        - if (syntaxHighlighting)
            link(rel="stylesheet" href="/assets/prism-duotone-light.css")

        - if (specialIncludes)
            - if (typeof specialIncludes === "object")
                for thing in specialIncludes
                    script(src=thing)
            - else
                script(src=specialIncludes)

        - if (aframeStyle)
            style
                | a-scene {
                | height: 300px;
                |  width: 50%;
                | }
        - if (gridStyle)
            include _includes/gridStyle.pug

    -
        let navObjects = [
            {href: "/", innerText: "Home"},
            {href: "/writing", innerText: "Writing"},
            {href: "/projects", innerText: "Projects"},
            {href: "/speaking", innerText: "Speaking"},
            {href: "/contact", innerText: "Contact"}
            ]

    // Colors from: http://clrs.cc/a11y/
    body(style="font-family: sans-serif; color: #234; background-color: #F8F8F8;")
        nav(style="display: block; width: 100%; font-size: 1.25rem;")
            ul(style="list-style-type: none; padding-left: 0;")
                // li
                //     a(href="/" class="navItem")
                //         img(style="display: inline-block; height: 1.5em; width: auto;" src="/assets/images/favicon.png" alt="small-logo")
                each navItem in navObjects
                    li
                        a(class="navItem" href=navItem.href) #{navItem.innerText}
        br
        |!{content}

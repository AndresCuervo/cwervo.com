doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title #{title ? title+" - " : ""} cwervo.com
        link(rel="stylesheet" href="/main.css")
        link(rel="icon" type="image/png" href="/assets/images/favicon.png")
        if (padding)
            style body {padding: 0 10%;}
        else
            style body {padding: 0 3%;}

        if noIndex
            meta(name="robots" content="noindex, nofollow")
        style.
            body { font-size: 1rem; }
            nav > ul > li:not(:last-child) {
                float: left;
                margin-right: 1em;
            }
            a {
                color: #0074D9;
                text-decoration-color: #2EAFAC;
            }
            a:visited {
                color: #B10DC9;
            }
            nav a {
                color: black;
            }
            nav a:visited {
                color: #333;
            }
        - if (specialIncludes)
            - if (typeof specialIncludes === "object")
                for thing in specialIncludes
                    script(src=thing)
            - else
                script(src=specialIncludes)

        - if (aframeStyle)
            style
                | a-scene {
                | height: 300px;
                |  width: 50%;
                | }
        - if (gridStyle)
            style.
                .grid {
                    display: grid;
                    grid-gap: 10px;
                    /* 1 column by default, below media query sizes */
                }

                a.gridItem {
                    padding: 4%;
                    text-decoration: none;
                    color: black;

                    border: 1px solid #DDD;
                    border-radius: 4px;
                }

                .gridItem .title {
                    font-weight: bold;
                    text-transform: capitalize;
                    text-decoration: underline;
                    margin-bottom: 5px;
                }

                a.gridItem:hover {
                    background-color: rgb(46,175,172);
                    background-color: rgba(46,175,172, 0.3);
                }

                @media (min-width: 600px) {
                    .grid {
                        grid-template-columns: repeat(2,1fr);
                    }
                }

                @media (min-width: 1000px) {
                    .grid {
                        grid-template-columns: repeat(3,1fr);
                    }
                }

                @media (min-width: 1150px) {
                    .grid {
                        padding: 0 5%;
                    }
                }

    // Colors from: http://clrs.cc/a11y/
    // body(style="font-family: sans-serif; font-size: 1.25rem; padding: 0 10%; background-color: #111; color: #2EAFAC;")
    // body(style="font-family: sans-serif; font-size: 1.25rem; padding: 0 10%; color: #111; background-color: #2EAFAC;")
    body(style="font-family: sans-serif; color: #234; background-color: #F8F8F8;")
        nav(style="display: block; width: 100%; font-size: 1.25rem;")
            ul(style="list-style-type: none; padding-left: 0;")
                li
                    a(href="/")
                        img(style="display: inline-block; height: 1.5em; width: auto;" src="/assets/images/favicon.png" alt="small-logo")
                li
                    a(href="/") Home
                li
                    a(href="/writing") Writing
                li
                    a(href="/projects") Projects
                li
                    a(href="/speaking") Speaking
                li
                    a(href="/about") About
                li
                    a(href="/contact") Contact
        br
        |!{content}
